# 环境变量配置示例
# 复制此文件为 .env 并修改配置

# 基础配置
APP_NAME=地方志数据管理系统
APP_VERSION=1.0.0
DEBUG=false
SECRET_KEY=your-super-secret-key-change-in-production-12345

# 服务器配置
HOST=0.0.0.0
PORT=8000
WORKERS=4

# 数据库配置
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/local_chronicles
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# JWT配置
JWT_SECRET_KEY=jwt-secret-key-change-in-production-67890
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 实名认证API配置（需要接入第三方服务）
REAL_NAME_API_URL=https://api.example.com/verify
REAL_NAME_API_KEY=your-api-key

# AI配置（OpenAI或其他兼容API）
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
AI_MAX_TOKENS=4000

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800

# CORS配置
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
